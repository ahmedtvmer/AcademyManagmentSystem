@model Instructor
@{
    ViewData["Title"] = "Update";
}

<h1>Update</h1>
<form asp-action="SaveUpdate" asp-controller="Instructor" method="post">
    <input type="hidden" asp-for="Id" value="@Model.Id" />

    <label asp-for="Name">Name</label>
    <input class="form form-control m-2" value="@Model.Name" asp-for="Name" />

    <label asp-for="Salary">Salary</label>
    <input class="form form-control m-2" value="@Model.Salary" asp-for="Salary" />

    <label asp-for="Address">Address</label>
    <input class="form form-control m-2" value="@Model.Address" asp-for="Address" />

    <label asp-for="DeptId">Department ID</label>
    <input class="form form-control m-2" value="@Model.DeptId" asp-for="DeptId" />

    <label asp-for="CourseId">Course ID</label>
    <input class="form form-control m-2" value="@Model.CourseId" asp-for="CourseId" />

    <button type="submit" class="btn btn-primary">Save</button>
</form>

